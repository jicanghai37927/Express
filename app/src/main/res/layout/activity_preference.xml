<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haiyunshan.express.PreferenceActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@drawable/bg_top_action_bar"
        android:paddingLeft="@dimen/action_bar_horizontal_margin"
        android:paddingRight="@dimen/action_bar_horizontal_margin">

        <TextView
            android:id="@+id/btn_back"
            style="@style/activity_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="返回"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设置"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btn_done"
            style="@style/activity_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="完成"
            android:visibility="visible" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efeff4"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/inset_3l"
            android:paddingTop="@dimen/inset_3l">

            <TextView
                android:id="@+id/btn_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inset_l"
                android:clickable="true"
                android:hapticFeedbackEnabled="false"
                android:soundEffectsEnabled="false"
                android:text="版本 1.0.0"
                android:textColor="#8f8f8f"
                android:textSize="@dimen/ts_10" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
