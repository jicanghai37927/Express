<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="280dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bg"
        android:gravity="center"
        android:minHeight="60dp"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="" />

        <com.haiyunshan.express.widget.ClearableEditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_input_edit_bg"
            android:maxLines="1"
            android:padding="4dp"
            android:drawableRight="@drawable/ic_clear"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14sp">

            <requestFocus />
        </com.haiyunshan.express.widget.ClearableEditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/dialog_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn_bottom_left"
            android:gravity="center"
            android:minHeight="@dimen/action_bar_height"
            android:text="取消" />

        <TextView
            android:id="@+id/btn_save"
            style="@style/dialog_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn_bottom_right"
            android:gravity="center"
            android:minHeight="@dimen/action_bar_height"
            android:text="存储" />
    </LinearLayout>


</LinearLayout>